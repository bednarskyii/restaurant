<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantApp.Pages.MenuPage"
             xmlns:local="clr-namespace:RestaurantApp.CustomControlls;assembly=RestaurantApp">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.10*"/>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="0.85*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" BackgroundColor="Black" Margin="0,30,0,0">
                <Label Text="RestaurantName" TextColor="White" FontAttributes="Bold" FontSize="30" Margin="30,5,5,5"/>      
            </StackLayout>

                <CollectionView Grid.Row="1"
                                ItemsSource="{Binding DishTypes}"
                                ItemsLayout="HorizontalList"
                                HorizontalOptions="CenterAndExpand"
                                BackgroundColor="Black"
                                SelectedItem="{Binding SelectedDish}"
                                SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Button Padding="5" Text="{Binding .}" TextColor="White" FontAttributes="Bold" FontSize="20" BackgroundColor="Black"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            <Grid Grid.Row="2" BackgroundColor="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition Width="0.3*"/>
                </Grid.ColumnDefinitions>

                <CollectionView VerticalOptions="Start"
                                Grid.Column="0"
                                Margin="20"
                                ItemsSource="{Binding Dishes}"
                                BackgroundColor="White">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="2" VerticalItemSpacing="20" HorizontalItemSpacing="20"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="10">
                                <Frame WidthRequest="50" HasShadow="True">
                                    <StackLayout HeightRequest="100" WidthRequest="100" BackgroundColor="White">
                                        <Label Text="{Binding Name}"/>
                                    </StackLayout>

                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding CommandItemSelected}" CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <ListView Grid.Column="1" ItemsSource="{Binding SelectedDishes}" Margin="20" HasUnevenRows="False">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                               <Label Margin="15" Text="{Binding Name}"/>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>
       
        </Grid>
    </ContentPage.Content>
</ContentPage>
